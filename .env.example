# Base URL of the deployment to run tests against.
# Overridden per environment in .env.example.production and .env.example.preview.
BUILD_URL=

# Secret to bypass Vercel's deployment protection.
# Required when testing Vercel preview deployments.
VERCEL_AUTOMATION_BYPASS_SECRET=

# Vercel API key (used for deployment-related test helpers).
VERCEL_API_KEY=

# Set to "preview" when running tests against a preview/staging environment.
# Some tests are skipped or behave differently depending on this value.
# Leave empty or set to "production" for production runs.
# Set to "preview" in .env.example.preview.
TEST_RUN_ENVIRONMENT=

# Credentials for the automated test user account used in auth setup and login flows.
AUTOMATED_USER_EMAIL=automation-test@example.com
AUTOMATED_USER_PASSWORD=

# Google OAuth credentials used in onboarding / magic-link tests.
GOOGLE_LOGIN_EMAIL=
GOOGLE_LOGIN_PASSWORD=
# TOTP / authenticator key for Google two-factor authentication.
GOOGLE_LOGIN_AUTH_KEY=

# API key for triage/internal tooling.
TRIAGE_API_KEY=
